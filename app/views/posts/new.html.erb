<div id="page_wrapper">
<h1>Create a new blog</h1>

<%= form_for :post, url: posts_path do |f|  %>
      <%if @post.errors.any?%>
          <div class="errors">
            <h2><%= pluralize(@post.errors.count, 'error')%> prevent this from savings:</h2>
            <ul>
              <% @post.errors.full_messages.each do |msg| %>
                 <li><%= msg%></li>
              <%end%>
            </ul>
          </div>

      <%end%>
    <%= f.label :title%><br>
    <%= f.text_field :title%><br>
    <%= f.label :body%><br>
    <%= f.text_field :body%><br>
    <br>
    <%= f.submit %>

<%end%>
    </div>
